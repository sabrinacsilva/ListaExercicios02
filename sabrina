function salario(){
    let nexp = Number(document.getElementById("nexp").value)
    let select = Number(document.getElementById("select").value)
    let expectativa = Number(document.getElementById("expectativa").value)

    let nsalario
    switch (select) {
        case 1:
            if(nexp < 5){
                nsalario = 3000
                document.getElementById("span").innerHTML = "Seu salário sera de R$" + nsalario
            }
            else{
                nsalario = 6000
                document.getElementById("span").innerHTML = "Seu salário sera de R$" + nsalario              
            }
            break;
    
        case 2:
            if(nexp < 5){
                nsalario = 5000
                document.getElementById("span").innerHTML = "Seu salário sera de R$" + nsalario
            }
            else{
                nsalario = 8000
                document.getElementById("span").innerHTML = "Seu salário sera de R$" + nsalario              
            }
            break;    
        
        case 3:
            if(nexp < 5){
                nsalario = 4000
                document.getElementById("span").innerHTML = "Seu salário sera de R$" + nsalario
            }
            else{
                nsalario = 7000
                document.getElementById("span").innerHTML = "Seu salário sera de R$" + nsalario              
            }
            break;

        default:
            break;
    }
 
    if(nsalario < 4500){
        document.getElementById("expectativa").innerHTML = "Alta!"

    }
    else if(nsalario >= 4500 && nsalario <= 6000){
        document.getElementById("expectativa").innerHTML = "Média!"
    }
    else if(nsalario > 6000){
        document.getElementById("expectativa").innerHTML = "Baixa!"
    }
 }
 
 
 <!DOCTYPE html>
<html lang="en">
